// GlassFish
glassfish {
    glassfishDir = "C:/Java/glassfish4/glassfish"
    moduleDir = "${glassfishDir}/modules"
    asadmin = "${glassfishDir}/bin/asadmin.bat"
    domainName = "domain1"
    hostName = "localhost"
    httpPort = "8080"
    adminPort = "4848"
    adminUsername = "admin"
    adminPasswordFile = "passwordfile4.txt"
    connPoolName = "DerbyPool2"
    datasourceJndiName = "jdbc/DerbyDS"
}

// Derby
derby {
    derbyDir = "C:/Java/db-derby-10.12.1.1-bin"
    derbyDBDir = "C:/tmp"
    driverDir= "${derbyDir}/lib"
    driverJar = "derbyclient.jar"
    driverClass = "org.apache.derby.jdbc.ClientDriver"
    datasource = "org.apache.derby.jdbc.ClientDataSource"
    hostName = "localhost"
    port = "1527"
    db = "testdb"
    url = "jdbc:derby://${hostName}:${port}/${System.properties['user.home']}/${db};create=true"
    user = "TESTUSER"
    password = "PASSWORD"
}